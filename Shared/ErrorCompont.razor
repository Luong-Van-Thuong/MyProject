@if (Messages?.Any() == true)
{
    <div class="toast-container">
        @foreach (var msg in Messages)
        {
            <div class="@CssClass">
                <span>@msg</span>
                <button class="close-btn" @onclick="() => Close(msg)">×</button>
            </div>
        }
    </div>
}

@code {

    [Parameter] public List<string> Messages { get; set; } = new();

    [Parameter] public EventCallback<string> OnClose { get; set; }

    [Parameter] public string CssClass { get; set; } = "error-toast";

    private void Close(string msg)
    {
        if (OnClose.HasDelegate)
        {
            OnClose.InvokeAsync(msg);
        }
    }
}
