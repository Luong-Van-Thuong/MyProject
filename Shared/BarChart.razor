@* BarChart.razor *@
@using MyProject.Data
<div class="container mt-5">
    <h3 class="text-center mb-4">Biểu đồ Độ tuổi Trung bình theo Năm học</h3>
    <div class="d-flex justify-content-center align-items-end" style="height: 300px; border-left: 1px solid #ccc; border-bottom: 1px solid #ccc;">
        @foreach (var thongKe in Data)
        {
            <div class="d-flex flex-column align-items-center mx-2 chart-bar ms-2" style="height: @(thongKe.TuoiTrungBinh * 10)px; background-color: #007bff; color: white;">
                <span>@thongKe.TuoiTrungBinh.ToString("0.0")%</span>
            </div>
        }
    </div>
    <div class="d-flex justify-content-center mx-2" style="border-bottom: 1px solid #ccc; margin-top: 10px;">
        @foreach (var thongKe in Data)
        {
            <div class="text-center mx-2 chart-label">
                <small>Năm @thongKe.NamHoc</small>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public List<NamHocThongKe> Data { get; set; } = new();
}